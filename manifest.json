{
  "manifest_version": 2,
  "name": "Twitter Scan",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
      "tabs", "storage"
  ],
  "page_action": {
    "default_icon": "loop.png"
  }
}

